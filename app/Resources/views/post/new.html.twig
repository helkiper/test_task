{% extends 'layout.html.twig' %}

{% block header %}
    <h1>Создать пост</h1>
{% endblock %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'main'}}) }}
        {#{{ form_widget(form) }}#}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}
        {{ form_row(form.content) }}
        {{ form_row(form.file) }}
        <div class="invisible">
            {{ form_rest(form) }}
        </div>
        <input type="submit" value="Создать" />
    {{ form_end(form) }}

    <div class="controls">
        <ul>
            <li>
                <a href="{{ path('helkiper_blog_index') }}">На главную</a>
            </li>
        </ul>
    </div>
{% endblock %}
