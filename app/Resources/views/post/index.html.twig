{% extends 'layout.html.twig' %}

{% block header %}
    <h1>Тестовый блог</h1>
{% endblock %}

{% block content %}
    <div class="row list-group">
        {% for post in posts %}
            <article class="col-xs-12 list-group-item">
                <h4>{{ post.name }}</h4>
                <span class="category">Категория:&nbsp;{{ post.category }}</span>
                <div class="preview">
                    {{ post.content | nl2br }}
                    <a class="read-more" href="{{ path('post_show', {'id': post.id }) }}">Читать дальше&hellip;</a>
                </div>
            </article>
        {% endfor %}
    </div>

    <div class="controls">
        <ul>
            <li>
                <a href="{{ path('post_new') }}">Создать пост</a>
            </li>
        </ul>
    </div>
{% endblock %}
