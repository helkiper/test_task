{% extends 'layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/helkiperblog/js/commentFormHandler.js') }}"></script>
{% endblock %}

{% block header %}
    <h1>{{ post.name }}</h1>
{% endblock %}

{% block content %}
    <div class="row list-group">
        <article class="col-xs-12{# list-group-item#}">
            <div>
                <div>
                    <span class="category pull-right">Категория:&nbsp;{{ post.category }}</span>
                    {% if post.file %}
                        <div>
                            <img class="post-image" src="{{ asset('bundles/helkiperblog/images/uploads/'~post.file) }}">
                        </div>
                    {% endif %}
                    <div>
                        {{ post.content | nl2br }}
                    </div>
                </div>
            </div>
        </article>
    </div>

    {% include 'comment/main.html.twig' %}

    <div class="controls">
    <ul>
        <li>
            <a href="{{ path('helkiper_blog_index') }}">На главную</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Редактировать</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
