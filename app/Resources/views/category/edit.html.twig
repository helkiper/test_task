{% extends 'layout.html.twig' %}

{% block header %}
    <h1>Редактирование категории</h1>
{% endblock %}

{% block content %}
    {{ form_start(edit_form, {'attr': {'class': 'main'}}) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Изменить" />
    {{ form_end(edit_form) }}

    <div class="controls">
        <ul>
            <li>
                <a href="{{ path('category_index') }}">Назад к списку категорий</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Удалить">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
